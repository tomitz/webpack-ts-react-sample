{
    "compilerOptions": {
        "baseUrl": "src",
        "rootDirs": ["src", "typings"],
        "outDir": "dist",
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "newLine": "LF",
        "sourceMap": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
